<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Detail File PDF</title>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <!-- Custom CSS -->
    <style>
      .card-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        padding: 20px;
      }

      .custom-card {
        max-width: 800px;
        width: 100%;
      }

      .pdf-container {
        width: 100%;
        height: 60vh; /* Tinggi iframe, sesuaikan dengan kebutuhan */
        overflow: auto; /* Memberikan scrollbar jika konten melebihi tinggi yang ditentukan */
        border: 1px solid #ccc;
        box-sizing: border-box; /* Untuk menghitung border dan padding dalam total lebar dan tinggi */
        padding: 10px; /* Ruang padding di sekitar iframe */
      }

      .pdf-viewer {
        width: 100%;
        height: 100%; /* Mengisi seluruh ruang yang tersedia dalam pdf-container */
        border: none; /* Menghilangkan border bawaan iframe */
      }
    </style>
  </head>
  <body>
    <div class="container card-container">
      <div class="card custom-card">
        <div class="card-body">
          <h5 class="card-title text-center">Detail File PDF</h5>
          <div class="pdf-container">
            <% if (detail && detail[0].file_pdf) { %>
            <iframe
              class="pdf-viewer"
              src="http://localhost:3000/images/upload/<%= detail[0].file_pdf %>"
              type="application/pdf"
              frameborder="0"
            ></iframe>
            <% } else { %>
            <p>File PDF tidak ditemukan.</p>
            <% } %>
          </div>
          <div class="info-container text-center">
            <h5 class="card-title mt-3"><%= detail[0].nama_file %></h5>
            <p class="card-text"><%= detail[0].deskripsi %></p>
            <p class="card-text">
              Diunggah oleh <span><%= detail[0].username %></span>
            </p>
            <div class="d-flex justify-content-center mt-3"></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Font Awesome -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>

    <!-- Bootstrap JS and dependencies (jQuery) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"
    ></script>

    <!-- JavaScript untuk mengubah ikon bookmark -->
    <script>
      function toggleBookmark(element) {
        const icon = element.querySelector("i");
        if (icon.classList.contains("far")) {
          icon.classList.remove("far");
          icon.classList.add("fas");
        } else {
          icon.classList.remove("fas");
          icon.classList.add("far");
        }
      }
    </script>
  </body>
</html>
