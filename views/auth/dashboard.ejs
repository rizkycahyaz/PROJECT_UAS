        text-decoration: none;
      }

      .bookmark-icon {
        cursor: pointer;
        color: #ffc107;
        padding-right: 10px;
      }

      .bookmark-icon:hover {
        color: #e0a800;
      }

      .hamburger-menu {
        display: none;
        cursor: pointer;
      }

      .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1em;
      }

      .header__logo {
        max-height: 50px;
      }

      .hamburger-menu {
        display: none;
        cursor: pointer;
      }

